BootStrap: docker-daemon
From: condaforge/miniforge3:24.11.3-2

%files
    ./single-seq-basic-install.R /opt/single-seq-basic-install.R

%post
    cp /etc/apt/sources.list /etc/apt/sources.list.bak
    echo "deb http://mirrors.aliyun.com/ubuntu/ noble main restricted universe multiverse" > /etc/apt/sources.list
    echo "deb http://mirrors.aliyun.com/ubuntu/ noble-updates main restricted universe multiverse" >> /etc/apt/sources.list
    echo "deb http://mirrors.aliyun.com/ubuntu/ noble-security main restricted universe multiverse" >> /etc/apt/sources.list

    apt-get update -qq && apt-get install -y locales -qq
    locale-gen en_US.UTF-8
    update-locale LANG=en_US.UTF-8

    conda config --add channels https://mirrors.tuna.tsinghua.edu.cn/anaconda/pkgs/main
    conda config --add channels https://mirrors.tuna.tsinghua.edu.cn/anaconda/pkgs/free
    conda config --add channels https://mirrors.tuna.tsinghua.edu.cn/anaconda/pkgs/r
    conda config --add channels https://mirrors.tuna.tsinghua.edu.cn/anaconda/cloud/conda-forge
    conda config --set show_channel_urls yes

    mamba create -n scverse r-tidyverse r-seurat scanpy r-devtools -c conda-forge -c bioconda --quiet -y

    mamba install -n scverse bioconda::bioconductor-rhdf5lib bioconda::bioconductor-rhdf5filters \
        bioconda::bioconductor-rhdf5 bioconda::bioconductor-hdf5array \
        bioconda::bioconductor-singlecellexperiment bioconda::bioconductor-rhtslib \
        bioconda::bioconductor-rsamtools bioconda::r-signac \
        -c conda-forge -c bioconda --quiet -y
    
    mamba create -n scvi-env scvi-tools scanpy -c conda-forge --quiet -y
    
    conda run -n scverse Rscript /opt/single-seq-basic-install.R

%environment
    export LANG=en_US.UTF-8
    export LC_ALL=en_US.UTF-8
    export PATH=/opt/conda/envs/scvi-env/bin:$PATH
    export PATH=/opt/conda/envs/scverse/bin:$PATH

