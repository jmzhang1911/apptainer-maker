BootStrap: docker-daemon
From: condaforge/miniforge3:25.11.0-0

%files
    scripts/utils.R /mnt/utils.R
    scripts/scenic-0.1.R /mnt/scenic.R
%post
    mamba create -n scenic conda-forge::r-arrow \
        r-tidyverse r-devtools \
        bioconda::bioconductor-complexheatmap bioconda::bioconductor-rcistarget \
        conda-forge::r-magick \
        r-hdf5r \
        -c bioconda -c conda-forge \
        -y --quiet
    source /opt/conda/etc/profile.d/conda.sh
    conda activate scenic
    /opt/conda/envs/scenic/bin/Rscript --verbose /mnt/scenic.R

%environment
    export LANG=en_US.UTF-8
    export LC_ALL=en_US.UTF-8
    export OPENBLAS_NUM_THREADS=1
    export OMP_NUM_THREADS=1
    export PATH=/opt/conda/bin:$PATH
    export PATH=/opt/conda/envs/scenic/bin:$PATH